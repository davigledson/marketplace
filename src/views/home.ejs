<!DOCTYPE html>
<html lang="pt">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <title>Marketplace</title>
  <link href="https://getbootstrap.com/docs/5.1/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://icons.getbootstrap.com/assets/font/bootstrap-icons.css">
  <link rel="stylesheet" href="css/style.css">

  
</head>

<body>
  
  <div class="container">
    <br />
    <div class="d-flex justify-content-between">
      <h2 class="m-2"><i class="bi bi-arrow-through-heart"></i> Lojinha</h2>
      <div>
        <a class="btn btn_login"><i class="bi bi-person-fill">Login</i></a>
        <a class="btn btn_sair"><i class="bi bi-box-arrow-in-right">Sair</i></a>
        <a class="btn" href="/carrinho"></i>Ir para carrinho <i class="bi bi-basket"></i></a>
        <div class="btn dropdown invisible" id="dropdown-menu">
          <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <span id="usuario-nome"></span>
          </button>
          <ul class="dropdown-menu ">
            <li><a class="dropdown-item " href="#">Action</a></li>
            <li><a class="dropdown-item btn_sair" href="#"><i class="bi bi-box-arrow-in-right"></i> Sair</a></li>
            <li><a class="dropdown-item" href="#">Perfil</a></li>
            <li><a class="dropdown-item btn_login" href="#"><i class="bi bi-person-fill">Login</i></a></li>
          </ul>
        </div>
      </div>
    </div>
    <br />
    <% if (produtos.length> 0) { %>
      <div class="row justify-content-between">
        <% for(var i=0; i < produtos.length; i++) {%>
          <div class="card col-3 jumbotron p-3 m-2">
            <div>
              <img src="<%= produtos[i].imagem %>" class="card-img-top" alt="..." />
              <div class="card-body">
                <div class="card-title">
                  <%= produtos[i].titulo %>
                </div>
                <p class="card-text fs-3 text-danger">
                  R$ <%= produtos[i].preco %>
                </p>
                <button id="<%= produtos[i].id %>" onclick="window.adicionarProduto(' <%= encodeURI(JSON.stringify(produtos[i])) %>', '<%= produtos[i].id %>' )" class="btn btn-success" type="button">
                  Adicionar ao carrinho
                </button>
              </div>
            </div>
          </div>
          <% } %>
      </div>
      <% } %>
  </div>
  <div class="card_login" id="loginCard">

    <%- include('cards/login'); -%>
  </div>
</body>
<script>
  function adicionarProduto(obj, id) {
    document.getElementById(id).innerHTML = "Adicionado";
    document.getElementById(id).className = "btn btn-info";

    fetch("/carrinho?produto="+obj, {
      method: "POST",
    })
    .then(response => response.json())
    .then((data) => {
      window.location.href = data.redirect
    }
    )
  }



</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<%- include('js/funcions'); -%>
</html>