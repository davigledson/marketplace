<!DOCTYPE html>
<html lang="pt">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <title>Marketplace</title>
  <link href="https://getbootstrap.com/docs/5.1/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://icons.getbootstrap.com/assets/font/bootstrap-icons.css">

  <style>
    .card_login{
    
      position: fixed;
      width: 40vw;
       display: none;
      
      backdrop-filter: blur(10px);
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      padding: 10px;
      border-radius: 5px;
     
      
      
    }
   
  </style>
</head>

<body>
  
  <div class="container">
    <br />
    <div class="d-flex justify-content-between">
      <h2 class="m-2"><i class="bi bi-arrow-through-heart"></i> Lojinha</h2>
      <div>
        <a class="btn" id="btn_login" ><i class="bi bi-person-fill">Login</i></a>

        <a class="btn" href="/carrinho"></i>Ir para carrinho <i class="bi bi-basket"></i></a>
        
      </div>
    </div>
    <br />
    <% if (produtos.length> 0) { %>
      <div class="row justify-content-between">
        <% for(var i=0; i < produtos.length; i++) {%>
          <div class="card col-3 jumbotron p-3 m-2">
            <div>
              <img src="<%= produtos[i].imagem %>" class="card-img-top" alt="..." />
              <div class="card-body">
                <div class="card-title">
                  <%= produtos[i].titulo %>
                </div>
                <p class="card-text fs-3 text-danger">
                  R$ <%= produtos[i].preco %>
                </p>
                <button id="<%= produtos[i].id %>" onclick="window.adicionarProduto(' <%= encodeURI(JSON.stringify(produtos[i])) %>', '<%= produtos[i].id %>' )" class="btn btn-success" type="button">
                  Adicionar ao carrinho
                </button>
              </div>
            </div>
          </div>
          <% } %>
      </div>
      <% } %>
  </div>
  <div class="card_login" id="loginCard">

    <%- include('cards/login'); -%>
  </div>
</body>
<script>
  function adicionarProduto(obj, id) {
    document.getElementById(id).innerHTML = "Adicionado";
    document.getElementById(id).className = "btn btn-info";

    fetch("/carrinho?produto="+obj, {
      method: "POST",
    })
    .then(response => response.json())
    .then((data) => {
      window.location.href = data.redirect
    }
    )
  }

  function chamarCard(){

   const card = document.querySelector(".card_login");

   if (card.style.display === 'block') {
        card.style.display = 'none';
    } else {
        card.style.display = 'block';
    }
  }
  document.getElementById('btn_login').addEventListener('click', chamarCard);

</script>
<script >

//faz login no autenticar
document.addEventListener("DOMContentLoaded", function() {
    const loginForm = document.getElementById("form_login");

    loginForm.addEventListener("submit", function(event) {
        event.preventDefault();

        const email = document.getElementById("email").value;
        const senha = document.getElementById("senha").value;

        const payload = {
            email: email,
            senha: senha
        };

        fetch("/autenticar", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify(payload)
        })
        .then(response => response.json())
        .then(data => {
          console.log(data);
            if (data.success) {
               // window.location.href = "/usuario"; // ou outra página de sucesso
               sessionStorage.setItem('usuario',JSON.stringify(data.success));
            } else {
                alert("Falha na autenticação: " + data.error);
            }
        })
        .catch(error => {
            console.error("Erro na autenticação:", error);
        });
    });
});

</script>
</html>