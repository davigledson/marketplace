<!-- Modal -->
<div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="formModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <!-- Cabeçalho -->
      <div class="modal-header bg-primary text-white">
        <h1 class="modal-title fs-5" id="formModalLabel">Cadastro de Produto</h1>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <!-- Corpo -->
      <div class="modal-body bg-light">
        <form id="produtoForm" class="p-3">
          <input type="hidden" name="id_produto_form" id="id_produto_form" />
          
          <!-- Dados do Produto -->
          <div class="mb-4 p-3 bg-white shadow-sm rounded">
            <h5 class="text-secondary fw-bold mb-3">Dados do Produto</h5>
            <div class="mb-3">
              <label for="nome" class="form-label">Nome do Produto</label>
              <input type="text" class="form-control" id="nome" name="nome" placeholder="Digite o nome do produto" >
            </div>
            <div class="mb-3">
              <label for="categoria" class="form-label">Categoria do Produto</label>
              <select class="form-select" id="categoria" name="categoria" >
                <option value="">Selecione uma categoria</option>
                <option value="eletronicos">Eletrônicos</option>
                <option value="moda">Moda</option>
                <option value="alimentos">Alimentos</option>
                <option value="livros">Livros</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="preco" class="form-label">Preço do Produto</label>
              <input type="number" step="0.01" class="form-control" id="preco" name="preco" placeholder="Digite o preço" >
            </div>
            <div class="mb-3">
              <label for="imagem" class="form-label">Imagem do Produto (link)</label>
              <input type="text" class="form-control" id="imagem" name="imagem" placeholder="Cole o link da imagem" >
            </div>
          </div>
          
          <!-- Estoque -->
          <div class="mb-4 p-3 bg-white shadow-sm rounded">
            <h5 class="text-secondary fw-bold mb-3">Estoque</h5>
            <div class="row g-3">
              <div class="col-md-4">
                <label for="quantidade" class="form-label">Quantidade Total</label>
                <input type="number" class="form-control" id="quantidade" name="quantidade" placeholder="Digite a quantidade total" >
              </div>
              <div class="col-md-4">
                <label for="disponivel" class="form-label">Disponível</label>
                <input type="number" class="form-control" id="disponivel" name="disponivel" placeholder="Quantidade disponível" >
              </div>
              <div class="col-md-4">
                <label for="vendidos" class="form-label">Vendidos</label>
                <input type="number" class="form-control" id="vendidos" name="vendidos" placeholder="Quantidade vendida" >
              </div>
            </div>
            <div class="row g-3 mt-3">
              <div class="col-md-4">
                <label for="reservado" class="form-label">Reservado</label>
                <input type="number" class="form-control" id="reservado" name="reservado" placeholder="Quantidade reservada" >
              </div>
              <div class="col-md-4">
                <label for="emTransito" class="form-label">Em Trânsito</label>
                <input type="number" class="form-control" id="emTransito" name="emTransito" placeholder="Quantidade em trânsito" >
              </div>
              <div class="col-md-4">
                <label for="minimo" class="form-label">Estoque Mínimo</label>
                <input type="number" class="form-control" id="minimo" name="minimo" placeholder="Quantidade mínima" >
              </div>
            </div>
            <div class="mt-3">
              <label for="localizacao" class="form-label">Localização no Armazém</label>
              <input type="text" class="form-control" id="localizacao" name="localizacao" placeholder="Informe o local de armazenamento" >
            </div>
          </div>
          
          <!-- Botões -->
          <div class="d-grid gap-2 mt-3">
            <button type="submit" id="btn_modal_salvar" class="btn btn-primary">Salvar Produto</button>
          </div>
        </form>
      </div>

      <!-- Rodapé -->
      <div class="modal-footer bg-light">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>
